{
  "name": "WPBASE",
  "version": "2.0.0",
  "main": "gulpfile.js",
  "author": "VESPERA",
  "copyright": "VESPERA",
  "license": "UNLICENSED",
  "private": true,
  "criticalUrl": "http://localhost/wp-base-v2/",
  "paths": {
    "src": {
      "styles": "./src/styles/",
      "stylesDist": "./src/styles/dist/",
      "fontello": "./src/fonts/fontello/",
      "fonts": "./src/fonts/",
      "js": "./src/js/",
      "img": "./src/images/"
    },
    "build": {
      "css": "./assets/css/",
      "fontello": "./assets/fonts/fontello/",
      "fonts": "./assets/fonts/",
      "js": "./assets/js/",
      "img": "./assets/images/"
    },
    "templates": "./views/"
  },
  "vars": {
    "siteJsName": "app.js",
    "siteCssName": "app.css",
    "scssName": "main.scss"
  },
  "globs": {
    "distCss": [
      "./src/styles/libs/*.css",
      "./src/styles/dist/main.css"
    ],
    "distJs": [
      "./src/js/libs/jquery.min.js",
      "./src/js/libs/*.js",
      "./src/js/main.js"
    ],
    "img": [
      "./public/images/"
    ],
    "critical": [
      {
        "url": "",
        "template": "home"
      },
      {
        "url": "404",
        "template": "404"
      },
      {
        "url": "search",
        "template": "search"
      }
    ]
  },
  "devDependencies": {
    "chalk": "^1.1.3",
    "critical": "^1.1.0",
    "fancy-log": "^1.2.0",
    "git-rev-sync": "^1.7.1",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-cached": "^1.1.1",
    "gulp-concat": "^2.6.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-filter": "^5.0.1",
    "gulp-fontello": "^0.4.6",
    "gulp-header": "^1.8.7",
    "gulp-if": "^2.0.1",
    "gulp-imagemin": "^3.1.1",
    "gulp-livereload": "^3.8.1",
    "gulp-load-plugins": "^1.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-print": "^2.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-rev": "^7.1.0",
    "gulp-sass": "^2.1.0",
    "gulp-sass-glob-import": "^0.1.0",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^2.2.1",
    "gulp-uglify": "^1.5.4",
    "moment": "^2.14.1"
  }
}
